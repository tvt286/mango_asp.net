@using Mango.Common
@using Mango.Client.Common
@using Mango.Services
@using Mango.Security
@using Mango.Data.Enums
@using Mango.Web
@using Mango.Data
@model Mango.Models.CategoryModel

@{
    ViewBag.Title = @Model.category.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- /banner_bottom_agile_info -->
<div class="page-head_agile_info_w3l">
    <div class="container">
        <h3><span>@Model.category.Name</span></h3>
        <!--/w3_short-->
        <div class="services-breadcrumb">
            <div class="agile_inner_breadcrumb">

                <ul class="w3_short">
                    <li><a href="@Url.Action("Index", "Home")">Home</a><i>|</i></li>
                    <li>@Model.category.Name</li>
                </ul>
            </div>
        </div>
        <!--//w3_short-->
    </div>
</div>

<!-- banner-bootom-w3-agileits -->
<div class="banner-bootom-w3-agileits">
    <div class="container">
        <!-- mens -->
        <div class="col-md-4 products-left">

            <div class="css-treeview">
                <h4>Categories</h4>
                <ul class="tree-list-pad">
                    <li>
                        <input type="checkbox" checked="checked" id="item-0" /><label for="item-0"><i class="fa fa-long-arrow-right" aria-hidden="true"></i>@Model.category.Menu1.Menu.Name</label>
                        <ul>
                            @{var index = 0;}
                            @foreach (var item in @Model.menus1)
                            {
                                <li>
                                    <input type="checkbox" checked="checked" id="item-0-@(index)" /><label for="item-0-@(index)"><i class="fa fa-long-arrow-right" aria-hidden="true"></i>@item.Name</label>
                                    <ul>
                                        @foreach (var cate in @item.Categories)
                                        {
                                            <li><a href="@Url.Action("Index", "Products", new { @id = cate.Id, menuId = @item.MenuId})">@cate.Name</a></li>
                                        }

                                    </ul>
                                    @{index++;}
                                </li>
                            }

                        </ul>
                    </li>

                </ul>
            </div>

            <div class="clearfix"></div>
        </div>
        <div class="col-md-8 products-right">
            <h5>Product </h5>
            @{var count = 0;}
            @foreach (var item in Model.category.Products)
            {
                {
                    count++;
                    if (count > 6)
                    {
                        break;
                    }
                }
                <div class="col-md-4 product-men">
                    <div class="men-pro-item simpleCart_shelfItem">
                        <div class="men-thumb-item">
                            <img src="@Url.ImageProductInfo(item)" alt="" class="pro-image-front">
                            <img src="@Url.ImageProductInfo(item)" alt="" class="pro-image-back">
                            <div class="men-cart-pro">
                                <div class="inner-men-cart-pro">
                                    <a href="@Url.Action("Detail", "Products", new { id = item.Id})" class="link-product-add-cart">Quick View</a>
                                </div>
                            </div>

                        </div>
                        <div class="item-info-product ">
                            <h4><a>@item.Name</a></h4>
                            <div class="info-product-price">
                                <span class="item_price">@item.SellingPrice.MoneyToStringVN()</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div>


        <div class="single-pro">

            @for (int i = 6; i < Model.category.Products.Count; i++)
            {
                var item = Model.category.Products.ElementAtOrDefault(i);


                <div class="col-md-3 product-men">
                    <div class="men-pro-item simpleCart_shelfItem">
                        <div class="men-thumb-item">
                            <img src="@Url.ImageProductInfo(item)" alt="" class="pro-image-front">
                            <img src="@Url.ImageProductInfo(item)" alt="" class="pro-image-back">
                            <div class="men-cart-pro">
                                <div class="inner-men-cart-pro">
                                    <a href="@Url.Action("Detail", "Products", new { id = item.Id})" class="link-product-add-cart">Quick View</a>
                                </div>
                            </div>
                            <span class="product-new-top">HOT</span>

                        </div>
                        <div class="item-info-product ">
                            <h4><a>@item.Name</a></h4>
                            <div class="info-product-price">
                                <span class="item_price">@item.SellingPrice.MoneyToStringVN()</span>
                            </div>
                           
                        </div>
                    </div>
                </div>

            }
            <div class="clearfix"></div>

        </div>


    </div>
</div>
<!-- //mens -->
@section scripts
{

}
