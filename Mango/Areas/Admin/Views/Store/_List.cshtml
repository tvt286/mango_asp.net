@using Mango.Common
@using Mango.Client.Common
@using Mango.Services
@using Mango.Security
@using Mango.Data.Enums
@using Mango.Web

@using PagedList.Mvc;
@model Mango.Services.PagedSearchList<Mango.Data.Store>

    @{
        var user = UserService.GetUserInfo();
    }


    <div class="">
        <h5 class="m-t-lg">Result @Model.TotalItemCount</h5>
    </div>
    <table class="table table-striped table-colored table-info table-hover">
        <thead>
            <tr>
                <th>
                    STT
                </th>       
                <th>
                    Code
                </th>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
              
               
                    <th data-sorter="false">
                    </th>
              
                @if (UserPermission.Has(Permission.Store_Deleted) || user.IsAdminCompany)
                {
                    <th data-sorter="false">
                        <a href="javascript:void(0)" onclick="DeleteStore()">
                            <i class="fa fa-times" style="color: red"></i>
                        </a>
                    </th>
                }
            </tr>
        </thead>
        @{ int index = Model.PageSize * (Model.PageNumber - 1) + 1; }
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(index++)
                    </td>
                 
                    <td>
                        @item.Code
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Address                      
                    </td>
                  
                        <td>
                            <a href="@Url.Action("Detail", new {id = item.Id})">
                                <i class="fa fa-pencil"></i>
                            </a>
                        </td>
                   
                    @if (UserPermission.Has(Permission.Store_Deleted) || user.IsAdminCompany)
                    {
                        <td>
                            <input type="checkbox" name="deleteStoreId" value="@item.Id" />
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page =>
{
    Model.SearchModel.PageIndex = page;
    return Url.Action("Index", "Store", Model.SearchModel);
},
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxCommonOption() { HttpMethod = "POST", UpdateTargetId = "content" }))


    <script type="text/javascript">
        $(function () {
            InitSortTable();
        });

        function DeleteStore() {
            var callFunc = function () {
                var storeStr = "";

                $.each($("input[name=deleteStoreId]:checked"),
                    function (index, element) {
                        storeStr += $(element).val() + ",";
                    });
                $.post('@Url.Action("Delete", "Store")',
                    {
                        storeId: storeStr
                    },
                    function (data) {
                        OnSuccessAjax(data);
                    });
            };

            ConfirmPopup("Bạn thực sự muốn xóa cửa hàng",
                "Cửa hàng này sẽ được xóa khỏi hệ thống",
                callFunc
                );

        }
    </script>
